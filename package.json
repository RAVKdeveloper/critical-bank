  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@libs/core(|/.*)$": "<rootDir>/libs/core/src/$1",
      "^@libs/repository(|/.*)$": "<rootDir>/libs/repository/src/$1",
      "^@libs/config(|/.*)$": "<rootDir>/libs/config/src/$1",
